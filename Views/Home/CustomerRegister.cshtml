@model dbapp.Models.CustomerRegisterViewModel
@{
  ViewData["Title"] = "CustomerRegister";
}

<div class="d-flex justify-content-center align-items-center vh-100 bg-black">
  <form asp-controller="Home" asp-action="CustomerRegister" method="post" class="form bg-dark-gray p-4 rounded">


    <div class="form-group">
      <label asp-for="FullName" class="control-label text-white">Name</label>
      <input asp-for="FullName" class="form-control"/>
      <span asp-validation-for="FullName" class="text-danger"></span>
    </div>

    <div class="form-group">
      <label asp-for="UserEmail" class="control-label text-white">Email</label>
      <input asp-for="UserEmail" class="form-control"/>
      <span asp-validation-for="UserEmail" class="text-danger"></span>
    </div>

    <div class="form-group mb-4">
      <label asp-for="Password" class="control-label text-white">Password</label>
      <input asp-for="Password" class="form-control" type="password"/>
      <span asp-validation-for="Password" class="text-danger"></span>
    </div>
   

    <div class="form-group mb-4" id="companyNameField">
      <label asp-for="CompanyName" class="control-label text-white">Company Name</label>
      <input asp-for="CompanyName" class="form-control"/>
      <span asp-validation-for="CompanyName" class="text-danger"></span>

    </div>


    <div class="form-group text-center">
      <input type="submit" value="Register" class="btn btn-dark-yellow"/>
    </div>

    <div class="form-group text-center mt-3">
      <a asp-controller="Home" asp-action="ChoosePersonType" class="text-warning">Go Back!</a>
    </div>

    <div asp-validation-summary="ModelOnly" class="alert alert-danger alert-dismissible fade show mt-3" role="alert">
      <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
  </form>
</div>



<style>

  body {
    margin: 0;
    background-color: black;
    color: white;
    height: 100vh;
    overflow: hidden;
  }

  .d-flex {
    display: flex;
  }

  .justify-content-center {
    justify-content: center;
  }

  .align-items-center {
    align-items: center;
  }

  .vh-100 {
    height: 100vh;
  }

  .bg-dark-gray {
    background-color: #333;
    color: white;
  }

  .rounded {
    border-radius: 8px;
  }

  .btn-dark-yellow {
    background-color: #ffcc00;
    color: black;
    border: none;
  }

  .btn-dark-yellow:hover {
    background-color: #e6b800;
    color: black;
  }

  .p-4 {
    padding: 1.5rem;
  }

  .text-white {
    color: white;
  }

</style>

