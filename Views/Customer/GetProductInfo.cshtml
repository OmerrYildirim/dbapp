@model List<ProductInfoViewModel>

@{
    ViewData["Title"] = "Product Information";
    Layout = "_customerNavBar";
}

<h2>@ViewData["Title"]</h2>

@if (Model != null && Model.Any())
{
    <div class="table-responsive" style="max-height: 500px; overflow-y: auto;">
        <table class="table table-bordered text-center text-light mt-5 fs-5" style="width: 80%; margin: 0 auto;">
            <thead>
            <tr>
                <th class="text-light ">Product Name</th>
                <th>Description</th>
                <th>Release Date</th>
                <th>Version ID</th>
                <th>Version Date</th>
                <th>Version Description</th>
            </tr>
            </thead>
            <tbody>
            @foreach (var product in Model)
            {
                <tr>
                    <td class = "text-light ">@product.ProductName</td>
                    <td>@product.ProductDescription</td>
                    <td>@product.ReleaseDate.ToString("yyyy-MM-dd")</td>
                    <td>@(product.VersionID.HasValue ? product.VersionID.Value.ToString() : "N/A")</td>
                    <td>@(product.VersionDate.HasValue ? product.VersionDate.Value.ToString("yyyy-MM-dd") : "N/A")</td>
                    <td>@(product.VersionDescription ?? "N/A")</td>
                </tr>
            }
            </tbody>
        </table>
    </div>
}
else
{
    <div>No products found for the specified name.</div>
}